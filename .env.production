# =============================================================================
# ZIMA Solutions Production Environment Configuration
# =============================================================================
# Copy this file to .env on your production server and update the values
# IMPORTANT: Never commit actual secrets to git!
# =============================================================================

APP_NAME="ZIMA Solutions"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=Africa/Dar_es_Salaam
APP_URL=https://zima.co.tz

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# =============================================================================
# Database Configuration
# =============================================================================
# For SQLite (development):
DB_CONNECTION=sqlite

# For MySQL (production - uncomment and configure):
# DB_CONNECTION=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=zima_website
# DB_USERNAME=your_db_username
# DB_PASSWORD=your_db_password

# =============================================================================
# Session & Cache (Security Hardened)
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=zima.co.tz
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=zima_

# =============================================================================
# Mail Configuration (cPanel SMTP)
# =============================================================================
MAIL_MAILER=smtp
MAIL_SCHEME=smtps
MAIL_HOST=zima.co.tz
MAIL_PORT=465
MAIL_USERNAME=info@zima.co.tz
MAIL_PASSWORD=YOUR_EMAIL_PASSWORD_HERE
MAIL_ENCRYPTION=null
MAIL_VERIFY_PEER=false
MAIL_FROM_ADDRESS=info@zima.co.tz
MAIL_FROM_NAME="ZIMA Solutions"
MAIL_CONTACT_TO=info@zima.co.tz

# =============================================================================
# Redis (Optional - for better performance)
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# AWS (Optional - for file storage)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# Vite
# =============================================================================
VITE_APP_NAME="${APP_NAME}"
